{
  "family": "sgt-ums-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "sgt-ums-backend",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/sgt-ums-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "5001"
        },
        {
          "name": "API_VERSION",
          "value": "v1"
        },
        {
          "name": "BCRYPT_ROUNDS",
          "value": "10"
        },
        {
          "name": "MAX_LOGIN_ATTEMPTS",
          "value": "5"
        },
        {
          "name": "LOCKOUT_DURATION",
          "value": "15"
        },
        {
          "name": "RATE_LIMIT_WINDOW",
          "value": "15"
        },
        {
          "name": "RATE_LIMIT_MAX_REQUESTS",
          "value": "100"
        },
        {
          "name": "JWT_EXPIRE",
          "value": "7d"
        },
        {
          "name": "JWT_COOKIE_EXPIRE",
          "value": "7"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sgt-ums/database-url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sgt-ums/jwt-secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sgt-ums-backend",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node healthcheck.js"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "mountPoints": [
        {
          "sourceVolume": "uploads",
          "containerPath": "/app/uploads",
          "readOnly": false
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "uploads",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-XXXXXXXXX",
        "rootDirectory": "/uploads",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-XXXXXXXXX"
        }
      }
    }
  ]
}